<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.zeal.student.ui.view.LockableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/white"
        tools:context=".QuestionActivity" >

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.zeal.student.ui.view.RibbonView
                    android:id="@+id/ribbon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.zeal.student.ui.view.QuestionView
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.zeal.student.ui.view.ChoicesView
                    android:id="@+id/choices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <com.zeal.student.ui.view.ScratchPadView
                android:id="@+id/scratch_pad"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            
        </FrameLayout>
    </com.zeal.student.ui.view.LockableScrollView>>
    
</LinearLayout>